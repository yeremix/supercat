<%= render 'navbar' %>
<p id="notice"><%= notice %></p>

<h1>Facultades</h1>

<table>
  <thead>
    <tr>
      <th>Cod.</th>
      <th>Facultad</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @faculties.each do |faculty| %>
      <tr>
        <td><%= faculty.cod %></td>
        <td><%= faculty.name %></td>
        <td><%= link_to 'Ver', faculty,class: 'btn black'%></td>
        <td><%= link_to 'Editar', edit_faculty_path(faculty),class: 'btn black'%></td>
        <td><%= button_to 'Eliminar', faculty, :method => :delete,class: 'btn red'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva facultad', new_faculty_path %>
