<%= render 'navbar' %>
<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col l12"> 
      <h1>Ramos
      <%= link_to '+', new_course_path,class: 'waves-effect waves-light btn-floating btn-large green darken-1' %></h1>
      <table class="centered striped responsive-table">
        <thead>
          <tr>
            <th>Carrera</th>
            <th>Cod.</th>
            <th>Nombre</th>
            <th>Tipo</th>
            <th>Dificultad</th>
            <th>Descripci√≥n</th>
            <th colspan="3">Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% @courses.each do |course| %>
            <tr>
              <td><%= course.school %></td>
              <td><%= course.cod %></td>
              <td><%= course.name %></td>
              <td><%= course.kind %></td>
              <td><%= course.difficulty %></td>
              <td><%= course.description %></td>
              <td><%= link_to 'Ver', course,class: 'btn black'%></td>
              <td><%= link_to 'Editar', edit_course_path(course),class: 'btn black'%></td>
