<p id="notice"><%= notice %></p>

<h1>Listing Schools</h1>

<table>
  <thead>
    <tr>
      <th>Faculty</th>
      <th>Cod</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.faculty %></td>
        <td><%= school.cod %></td>
        <td><%= school.name %></td>
        <td><%= link_to 'Show', school %></td>
        <td><%= link_to 'Edit', edit_school_path(school) %></td>
        <td><%= button_to 'Eliminar', school, :method => :delete,class: 'btn red'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

