<%= render 'navbar' %>
<p id="notice"><%= notice %></p>

<h1>Carreras</h1>

<table>
  <thead>
    <tr>
      <th>Facultad</th>
      <th>Cod.</th>
      <th>Nombre</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.faculty %></td>
        <td><%= school.cod %></td>
        <td><%= school.name %></td>
        <td><%= link_to 'Ver', school,class: 'btn black'%></td>
        <td><%= link_to 'Editar', edit_school_path(school),class: 'btn black'%></td>
        <td><%= button_to 'Eliminar', school, :method => :delete,class: 'btn red'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva carrera', new_school_path %>
