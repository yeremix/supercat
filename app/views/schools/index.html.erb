<%= render 'navbar' %>
<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col l12">
      <h1>Carreras
      <%= link_to '+', new_school_path,class: 'waves-effect waves-light btn-floating btn-large green darken-1' %></h1>
      <table class="centered striped responsive-table">
        <thead>
          <tr>
            <th>Facultad</th>
            <th>Cod.</th>
            <th>Nombre</th>
            <th colspan="3">Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% @schools.each do |school| %>
            <tr>
              <td><%= school.faculty %></td>
              <td><%= school.cod %></td>
              <td><%= school.name %></td>
              <td><%= link_to 'Ver', school,class: 'btn black'%></td>
              <td><%= link_to 'Editar', edit_school_path(school),class: 'btn black'%></td>
              <td><%= button_to 'Eliminar', school, :method => :delete,class: 'btn red'%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>